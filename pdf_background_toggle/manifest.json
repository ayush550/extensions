{
  "manifest_version": 3,
  "name": "PDF Dark Mode",
  "version": "1.0",
  "description": "Convert PDF background to black and text to white",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon64.png"
  }
}
